<div class="container">
  <div class="row">
    <h1>All Topics</h1>
		<h3>Find a Topic and Start Bookmarking</h3>
		<h4>Edit or Delete Topics!</h4>
    <% @topics.each do |topic| %>
    <h3><% if policy(topic).destroy? %>
      <%= link_to topic, data: { confirm: 'Are you sure you want to delete this topic?' }, method: :delete, class: 'btn btn-danger btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="Delete Topic">
        <span class="glyphicon-trash">
        </span>
      </span>
      <% end %>
      <% link_to edit_topic_path(topic), class: 'btn btn-success btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="Edit Topic">
        <span class="glyphicon glyphicon-pencil">
        </span>
      </span>
      <% end %>
      <%= link_to "#{topic.title}", topic %></h3>
      <% else %>
      <h3><%= link_to "#{topic.title}", topic %></h3>
      <% end %>

      <% end %>
      <% if current_user %>
      <%= link_to "My Topics", topics_my_topics_path, class: 'btn btn-info' %> <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
      <% end %>
      <br />
    </div>
  </div>
