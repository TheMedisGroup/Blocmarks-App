<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>My Bookmarks</h1>
      <% current_user.bookmarks.each do |bookmark| %>
      <h4><%= link_to "#{bookmark.url}", bookmark.url %>
        <%= render partial: 'likes/like', locals: { bookmark: bookmark } %></h4>
        <% end %>
        <% unless current_user.bookmarks.present? %>
        <h3>You don't have any bookmarks yet. Let's get started bookmarking!</h3>
        <% end %>
        <%= link_to "View Topics", topics_path, class: 'btn btn-info btn-bottom' %> <%= link_to "All Bookmarks", bookmarks_path, 'btn btn-info btn-bottom' %>
      </div>
      <div class="col-md-6">
        <h1>Liked Bookmarks</h1>
        <% current_user.liked_bookmarks.each do |bookmark| %>
        <h4><%= link_to "#{bookmark.url}", bookmark.url %>
          <%= render partial: 'likes/like', locals: { bookmark: bookmark } %></h4>
          <% end %>
        </div>
      </div>
    </div>
