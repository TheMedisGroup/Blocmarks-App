<% if policy(Like.new).create? %>
  <% if like = current_user.liked(bookmark) %>
    <span class="label label-primary">Liked</span>
    <%= link_to bookmark_like_path(bookmark, like), class: 'btn btn-inverse btn-xs', method: :delete do %>
      <span class="has-tooltip" data-toggle="tooltip" title="Unlike Bookmark">
        <i class="glyphicon glyphicon-thumbs-down"> </i>
      </span>
      <% end %>
    <% else %>
      <%= link_to bookmark_likes_path(bookmark), class: 'btn btn-inverse btn-xs', method: :post do %>
        <span class="has-tooltip" data-toggle="tooltip" title="Like Bookmark">
          <i class="glyphicon glyphicon-thumbs-up"> </i>
        </span>
      <% end %>
    <% end %>
  <% end %>
<br \>
