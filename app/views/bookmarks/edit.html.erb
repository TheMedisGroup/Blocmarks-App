<div class="container">
  <div class="row">
    <h4>Edit Bookmark</h4>
    <%= form_for @bookmark do |f| %>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control field-small' %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
